<Window x:Class="damage_counter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:damage_counter"
        mc:Ignorable="d"
        Title="SwordDamage" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="377*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="flaming" Content="Flaming" Grid.Column="1" HorizontalAlignment="Left" Margin="0,48,0,0" VerticalAlignment="Top" Checked="Flaming_checked" Unchecked="Flaming_unchecked"/>
        <CheckBox x:Name="magic" Content="Magic" Grid.Column="1" HorizontalAlignment="Left" Margin="115,48,0,0" VerticalAlignment="Top" Unchecked="Magic_unchecked" Checked="Magic_checked"/>
        <Button x:Name="button" Content="Roll for damage" Grid.Column="1" HorizontalAlignment="Left" Margin="41,90,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <TextBlock x:Name="damage" Grid.Column="1" HorizontalAlignment="Left" Margin="64,127,0,0" Text="damage" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
